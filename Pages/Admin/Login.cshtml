@page
@model GoldContest.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <title>Admin Login - Gold Contest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&family=Noto+Sans+Arabic:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        html[dir="rtl"] body {
            font-family: 'Noto Sans Arabic', 'Inter', sans-serif;
        }

        /* Background */
        .bg {
            position: fixed;
            inset: 0;
            z-index: 0;
        }

        .bg::before {
            content: '';
            position: absolute;
            inset: 0;
            background:
                radial-gradient(ellipse at 50% 40%, rgba(212, 175, 55, 0.08) 0%, transparent 60%),
                radial-gradient(ellipse at 30% 80%, rgba(245, 215, 105, 0.04) 0%, transparent 50%);
        }

        /* Language toggle */
        .lang-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 100;
            display: flex;
            border-radius: 10px;
            overflow: hidden;
            border: 1px solid rgba(212, 175, 55, 0.25);
            backdrop-filter: blur(10px);
        }

        html[dir="rtl"] .lang-toggle {
            right: auto;
            left: 20px;
        }

        .lang-btn {
            padding: 8px 16px;
            background: transparent;
            border: none;
            color: #8a7d65;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            font-family: 'Inter', sans-serif;
        }

        .lang-btn.active {
            background: linear-gradient(135deg, #d4af37, #f5d769);
            color: #1a1408;
        }

        .lang-btn:not(.active):hover {
            background: rgba(212, 175, 55, 0.1);
            color: #d4af37;
        }

        /* Login card */
        .login-card {
            position: relative;
            z-index: 10;
            background: linear-gradient(145deg, rgba(20, 18, 16, 0.95), rgba(26, 22, 16, 0.95));
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 20px;
            padding: 48px 40px;
            width: 100%;
            max-width: 400px;
            backdrop-filter: blur(20px);
            box-shadow:
                0 24px 60px rgba(0, 0, 0, 0.5),
                inset 0 1px 0 rgba(212, 175, 55, 0.1);
        }

        .shield-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.15), rgba(245, 215, 105, 0.08));
            border: 1px solid rgba(212, 175, 55, 0.25);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin: 0 auto 24px;
        }

        .login-card h2 {
            font-family: 'Playfair Display', serif;
            font-size: 26px;
            text-align: center;
            background: linear-gradient(135deg, #d4af37, #f5d769);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 6px;
        }

        html[dir="rtl"] .login-card h2 {
            font-family: 'Noto Sans Arabic', serif;
        }

        .subtitle {
            text-align: center;
            color: #5a5040;
            font-size: 14px;
            margin-bottom: 32px;
        }

        .field {
            margin-bottom: 24px;
        }

        .field label {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #8a7d65;
            margin-bottom: 8px;
            font-weight: 500;
        }

        html[dir="rtl"] .field label {
            letter-spacing: 0;
            text-align: right;
        }

        .field input {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 10px;
            padding: 14px 16px;
            color: #e0d6c2;
            font-family: 'Inter', sans-serif;
            font-size: 15px;
            transition: all 0.3s;
        }

        html[dir="rtl"] .field input {
            text-align: right;
            font-family: 'Noto Sans Arabic', 'Inter', sans-serif;
        }

        .field input:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
            background: rgba(255, 255, 255, 0.06);
        }

        .field input::placeholder {
            color: #4a4030;
        }

        .login-btn {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #d4af37, #f5d769);
            border: none;
            border-radius: 12px;
            font-family: 'Inter', sans-serif;
            font-size: 16px;
            font-weight: 600;
            color: #1a1408;
            cursor: pointer;
            transition: all 0.3s;
            letter-spacing: 0.5px;
        }

        html[dir="rtl"] .login-btn {
            font-family: 'Noto Sans Arabic', 'Inter', sans-serif;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212, 175, 55, 0.4);
        }

        .error-msg {
            margin-top: 16px;
            text-align: center;
            padding: 12px;
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.2);
            border-radius: 10px;
            color: #ff6b7a;
            font-size: 14px;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #5a5040;
            text-decoration: none;
            font-size: 13px;
            transition: color 0.3s;
        }

        .back-link:hover {
            color: #d4af37;
        }
    </style>
</head>

<body>

<div class="bg"></div>

<!-- Language Toggle -->
<div class="lang-toggle">
    <button class="lang-btn active" data-lang="en" onclick="setLang('en')">EN</button>
    <button class="lang-btn" data-lang="ar" onclick="setLang('ar')">ÿπÿ±ÿ®Ÿä</button>
</div>

<div class="login-card">
    <div class="shield-icon">üîê</div>
    <h2 data-i18n="title">Admin Access</h2>
    <p class="subtitle" data-i18n="subtitle">Gold Contest Administration</p>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="field">
            <label data-i18n="password_label">Password</label>
            <input type="password" name="Password" data-i18n-placeholder="password_placeholder" placeholder="Enter admin password" required autocomplete="current-password" />
        </div>

        <button type="submit" class="login-btn" data-i18n="sign_in">Sign In</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-msg" data-i18n="error_msg">Invalid password. Please try again.</div>
    }

    <a href="/" class="back-link" data-i18n="back_link">‚Üê Back to Contest</a>
</div>

<script>
const translations = {
    en: {
        title: "Admin Access",
        subtitle: "Gold Contest Administration",
        password_label: "Password",
        password_placeholder: "Enter admin password",
        sign_in: "Sign In",
        error_msg: "Invalid password. Please try again.",
        back_link: "‚Üê Back to Contest"
    },
    ar: {
        title: "ÿØÿÆŸàŸÑ ÿßŸÑŸÖÿ≥ÿ§ŸàŸÑ",
        subtitle: "ÿ•ÿØÿßÿ±ÿ© ŸÖÿ≥ÿßÿ®ŸÇÿ© ÿßŸÑÿ∞Ÿáÿ®",
        password_label: "ŸÉŸÑŸÖÿ© ÿßŸÑŸÖÿ±Ÿàÿ±",
        password_placeholder: "ÿ£ÿØÿÆŸÑ ŸÉŸÑŸÖÿ© ŸÖÿ±Ÿàÿ± ÿßŸÑŸÖÿ≥ÿ§ŸàŸÑ",
        sign_in: "ÿ™ÿ≥ÿ¨ŸäŸÑ ÿßŸÑÿØÿÆŸàŸÑ",
        error_msg: "ŸÉŸÑŸÖÿ© ÿßŸÑŸÖÿ±Ÿàÿ± ÿ∫Ÿäÿ± ÿµÿ≠Ÿäÿ≠ÿ©. ÿ≠ÿßŸàŸÑ ŸÖÿ±ÿ© ÿ£ÿÆÿ±Ÿâ.",
        back_link: "‚Üí ÿßŸÑÿπŸàÿØÿ© ÿ•ŸÑŸâ ÿßŸÑŸÖÿ≥ÿßÿ®ŸÇÿ©"
    }
};

function setLang(lang) {
    localStorage.setItem('goldcontest_lang', lang);
    applyLang(lang);
}

function applyLang(lang) {
    const t = translations[lang];
    const html = document.documentElement;

    // Set direction
    html.setAttribute('dir', lang === 'ar' ? 'rtl' : 'ltr');
    html.setAttribute('lang', lang);

    // Update toggle buttons
    document.querySelectorAll('.lang-btn').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.lang === lang);
    });

    // Update text content
    document.querySelectorAll('[data-i18n]').forEach(el => {
        const key = el.getAttribute('data-i18n');
        if (t[key]) el.textContent = t[key];
    });

    // Update placeholders
    document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {
        const key = el.getAttribute('data-i18n-placeholder');
        if (t[key]) el.placeholder = t[key];
    });
}

// Load saved language
document.addEventListener('DOMContentLoaded', () => {
    const savedLang = localStorage.getItem('goldcontest_lang') || 'en';
    applyLang(savedLang);
});
</script>

</body>
</html>
