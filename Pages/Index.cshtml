@page
@model GoldContest.Pages.IndexModel
@{
    ViewData["Title"] = "Gold Contest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Gold Contest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background:
                linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
                url('/Dollar.png') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background: rgba(255,255,255,0.95);
            width: 380px;
            padding: 24px;
            border-radius: 14px;
            box-shadow: 0 15px 40px rgba(0,0,0,.5);
            z-index: 2;
        }

        h1 {
            text-align: center;
            color: #1e88e5;
        }

        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-top: 4px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        button {
            margin-top: 16px;
            width: 100%;
            padding: 12px;
            background: #43a047;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
        }

        /* üèÜ SIDE WINNERS TABLE */
        /* üèÜ TOP SCROLLING TICKER */
        /* üèÜ TOP SLIDESHOW CAROUSEL */
        .winner-carousel {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background: rgba(0, 0, 0, 0.9);
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.6);
        }

        .carousel-slide {
            font-size: 22px;
            font-weight: bold;
            color: #ffd700;
            text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            opacity: 0;
            transition: opacity 1s ease-in-out;
            position: absolute;
            width: 100%;
            text-align: center;
        }

        .carousel-slide.active {
            opacity: 1;
        }

        .admin-link {
            position: absolute;
            top: 70px; /* Moved down to avoid overlapping ticker */
            left: 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
            background: rgba(0, 0, 0, 0.3);
            padding: 8px 15px;
            border-radius: 20px;
            transition: background 0.3s;
        }

        .admin-link:hover {
            background: rgba(0, 0, 0, 0.6);
            color: white;
        }
    </style>
</head>

<body>



<a href="/Admin/Login" class="admin-link">Admin Login</a>

<!-- üèÜ WINNERS SIDE PANEL -->
<!-- üèÜ TOP WINNERS SCROLL -->
<!-- üèÜ TOP WINNERS SLIDESHOW -->
@if (Model.Winners.Any())
{
    <div class="winner-carousel">
        @for (int i = 0; i < Model.Winners.Count; i++)
        {
            var w = Model.Winners[i];
            <div class="carousel-slide @(i == 0 ? "active" : "")">
                üèÜ Congratulations: @w.AccountName - Account: @w.AccountNumber üèÜ
            </div>
        }
    </div>
}

<!-- CUSTOMER ENTRY FORM -->
<div class="card">
    <h1>Gold Price Contest</h1>

    <form method="post" onsubmit="return submitForm(event);">
        @Html.AntiForgeryToken()

        <label>Account Number</label>
        <input name="AccountNumber" required />

        <label>Account Name</label>
        <input name="AccountName" required />

        <label>Lower Gold Rate</label>
        <input name="LowerRate" type="number" step="0.01" required />

        <label>Upper Gold Rate</label>
        <input name="UpperRate" type="number" step="0.01" required />

        <button type="submit">Enter Contest</button>
    </form>
</div>

<script>
async function submitForm(e) {
    e.preventDefault();
    const form = e.target;
    const token = form.querySelector('input[name="__RequestVerificationToken"]').value;

    const res = await fetch('', {
        method: 'POST',
        body: new FormData(form),
        headers: { 'RequestVerificationToken': token }
    });

    const result = await res.json();
    alert(result.messageEn);
    if (result.success) form.reset();
}

// üé† CAROUSEL LOGIC
document.addEventListener("DOMContentLoaded", function() {
    const slides = document.querySelectorAll('.carousel-slide');
    if (slides.length > 1) {
        let currentSlide = 0;
        setInterval(() => {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }, 3500); // Change every 3.5 seconds
    }
});
</script>

</body>
</html>